{% extends "layout.html.twig" %}
{% block stylesheet %}
<link rel="stylesheet" href="/assets/css/description/style.css">
{% endblock %}
{% block content %}
{% for desc in data.result.webcams %}
<div class="row mt-4">
    <img src="https://www.drapeauxdespays.fr/data/flags/w580/{{desc.location.country_code|lower}}.png"
        class="offset-lg-1 col-lg-1 offset-md-1 col-md-2 d-none d-sm-none d-md-block" alt="">
    <h1 class="col-lg-8 col-md-6 text-center text-white"> {{desc.location.country}} </h1>
    <img src="https://www.drapeauxdespays.fr/data/flags/w580/{{desc.location.country_code|lower}}.png"
        class="col-lg-1 col-md-2 d-sm-none d-none d-md-block" alt="">
    <hr class="mt-5 mb-5 text-center col-lg-10 col-sm-10 col-10 border border-dark">
</div>
<h3 class="text-center mb-5 text-white">{{desc.location.city}}</h3>
<img src={{desc.image.current.preview}} class="col-12 offset-lg-2 offset-sm-2 col-lg-8 col-sm-8 justify-content-center">
<div class="col-lg-12 col-sm-12 col-12 row justify-content-center">
    <div class="col-lg-8 col-sm-8 col-12 justify-content-center text-white">
        <p class="mt-4">Région : {{ desc.location.region }}</p>
        <p>Continent : {{ desc.location.continent }}</p>
        <p>Latitude : {{ desc.location.latitude }}</p>
        <p>Longitude : {{ desc.location.longitude }}</p>
        <p>Wikipédia : <a href="{{ desc.location.wikipedia|split(' ')|first }}"
                class="text-white">{{ desc.location.wikipedia|split(' ')|first }}</a>
        </p>
    </div>
</div>
{% endfor %}
{% endblock %}