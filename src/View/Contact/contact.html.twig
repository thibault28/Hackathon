{% extends 'layout.html.twig' %}

{% block content %}
<div class="row d-flex justify-content-center">
    <div class="col-lg-6 mt-5">
        <form action="" method="post" enctype="multipart/form-data" class="col-lg-12 form-group">

            <label for="email" class="col-lg-12 text-white text-shadow">Email</label>
            <input type="email" name="email" id="email" tabindex="1" class="col-lg-12 form-control" required>

            <label for="name" class="col-lg-12 mt-3 text-white text-shadow">Nom</label>
            <input type="text" name="name" id="name" tabindex="2" class="col-lg-12 form-control" required>

            <label for="message" class="col-lg-12 mt-3 text-white text-shadow">Message</label>
            <textarea name="message" id="message" tabindex="3" class="col-lg-12 form-control" required></textarea>


            <input type="submit" name="contact" value="Send" tabindex="4" class="btn btn-primary mt-3">

        </form>
    </div>
</div>
{% if error is not null %}
<p>{{error}}</p>
{% endif %}

{% endblock %}